<h1>Listing clases</h1>

<table>
  <thead>
    <tr>
      <th>Genero</th>
      <th>Plataforma</th>
      <th>Multijugador</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clases.each do |clase| %>
      <tr>
        <td><%= clase.genero %></td>
        <td><%= clase.plataforma %></td>
        <td><%= clase.multijugador %></td>
        <td><%= link_to 'Show', clase %></td>
        <td><%= link_to 'Edit', edit_clase_path(clase) %></td>
        <td><%= link_to 'Destroy', clase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Clase', new_clase_path %>
